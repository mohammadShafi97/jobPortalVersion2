<%- include("../partials/header.ejs") %>
<div class="container topmargin">
  <div
    class="d-flex flex-column justify-content-center align-items-center m-auto loginContainer border p-3 rounded-3 bg-primary-subtle"
  >
    <div class="border-bottom border-2 border-primary w-100 text-center">
      <h1 class="fs-2">Job Portal</h1>
    </div>

    <h2 class="fs-4 mt-3">Register</h2>
    <form class="d-flex flex-column w-100">
      <input
        type="text"
        class="mb-3 mt-3 py-1 ps-1"
        name="username"
        placeholder="Full Name"
      />
      <input
        type="number"
        class="mb-3 mt-3 py-1 ps-1"
        name="phone"
        placeholder="mobile number"
      />
      <input
        type="email"
        class="mb-3 mt-3 py-1 ps-1"
        name="email"
        placeholder="Enter Email"
      />
      <input
        type="password"
        class="mb-3 mt-3 py-1 ps-1"
        name="password"
        placeholder="Enter Password"
      />
      <input
        type="password"
        class="mb-3 mt-3 py-1 ps-1"
        name="re-password"
        placeholder="Re-Enter Password"
      />
      <button class="mb-3 mt-3 py-1 btn btn-primary">Register</button>
    </form>

    <p>Already have an account? <a href="/auth/login">Login</a></p>
  </div>
</div>

<%- include("../partials/footer.ejs") %>
